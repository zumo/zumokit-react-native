{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es6"
    ],
    "outDir": "lib",
    "allowJs": false,
    "target": "es5",
    "strict": true,
    "strictPropertyInitialization": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "declaration": true
  }
}